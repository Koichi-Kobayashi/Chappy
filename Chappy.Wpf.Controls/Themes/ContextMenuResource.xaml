<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Chappy.Wpf.Controls.ContextMenu">

    <!--  ========== Brushes ==========  -->
    <SolidColorBrush x:Key="Win11.Menu.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="Win11.Menu.Border" Color="#22000000" />
    <SolidColorBrush x:Key="Win11.Menu.Hover" Color="#12000000" />
    <SolidColorBrush x:Key="Win11.Menu.Separator" Color="#14000000" />
    <SolidColorBrush x:Key="Win11.Menu.Text" Color="#FF111111" />
    <SolidColorBrush x:Key="Win11.Menu.Arrow" Color="#7F000000" />

    <!--  Converterが必要なら定義（今回は使わずTriggerで済ませる）  -->
    <!--<BooleanToVisibilityConverter x:Key="BoolToVis"/>-->

    <!--  ========== Templates ==========  -->

    <!--  Separator：MarginはStyleでSetterしない。Template内に持つ  -->
    <ControlTemplate x:Key="Win11.Separator.Template" TargetType="{x:Type Separator}">
        <Border
            Height="1"
            Margin="8,6"
            Background="{StaticResource Win11.Menu.Separator}" />
    </ControlTemplate>

    <Style TargetType="{x:Type Separator}">
        <Setter Property="Template" Value="{StaticResource Win11.Separator.Template}" />
    </Style>

    <!--  ========== Styles ==========  -->

</ResourceDictionary>
